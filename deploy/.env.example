# ==========================================
# CẤU HÌNH PRODUCTION ENVIRONMENT SOLAR O&M
# Copy file này thành .env và điền các giá trị thực tế
# ==========================================

# 1. Database (PostgreSQL) Container config
DB_USER=postgres
DB_PASSWORD=YOUR_DB_PASSWORD_HERE
DB_NAME=solar_om

# 2. Native MinIO Connection
# Kết nối đến MinIO đang chạy trên máy chủ
MINIO_ENDPOINT=minio.raitek.cloud
MINIO_ACCESS_KEY=mtryha11
MINIO_SECRET_KEY=Hpx21led
MINIO_BUCKET=dev
MINIO_USE_SSL=false

# 3. Security
# Chuỗi JWT bí mật để ký token đăng nhập (Đổi thành chuỗi ngẫu nhiên dài)
JWT_SECRET=YOUR_SUPER_SECRET_STRING_JWT

# 4. Web Push Notifications
# Lấy cặp khóa tại https://www.vapidkeys.com/
VAPID_PUBLIC_KEY=YOUR_VAPID_PUBLIC_KEY
VAPID_PRIVATE_KEY=YOUR_VAPID_PRIVATE_KEY
